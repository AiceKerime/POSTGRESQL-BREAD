<%- include('../partials/header') %>

    <h2><strong>BREAD (Browse, Read, Edit, Add, Delete)</strong></h2>
    <%- include('../users/search') %>

        <table id="table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>ID</th>
                    <th>String</th>
                    <th>Integer</th>
                    <th>Float</th>
                    <th>Date</th>
                    <th>Boolean</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% data.forEach((item, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.string %>
                        </td>
                        <td>
                            <%= item.integer %>
                        </td>
                        <td>
                            <%= item.float %>
                        </td>
                        <td>
                            <%= item.date==null ? 'kosong' : moment(item.date).format('DD MMMM YYYY')%>
                        </td>
                        <td>
                            <%= item.boolean %>
                        </td>
                        <td>
                            <a href="/users/edit/<%= item.id %>" class="btn btn-success">Edit</a>
                            <a href="/users/delete/<%= item.id %>"
                                onclick="return confirm('Are you sure you want to delete this data?')"
                                class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <br>
        <a class="btn btn-primary" href="/users/add">Add</a>
        <a href="/" class="btn btn-danger" id="BackButton">Back</a>

        <%- include('../partials/footer') %>