<h2>Filter</h2>

<form action="" method="get">
    <input type="hidden" name="page" value="1">
    <div>
        <div class="py-2 align-items-center">
            <input type="checkbox" aria-label="Checkbox for following text input" <%=query.idCheck ? 'checked' : '' %>>
            <label class="col-sm-2 form-label">ID</label>
            <div class="space-8">
                <input id="id" class="form-control" type="number" name="id" placeholder="Id">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="py-2 align-items-center">
            <input type="checkbox" aria-label="Checkbox for following text input" <%=query.stringCheck ? 'checked' : ''
                %>>
            <label class="col-sm-2 form-label">String</label>
            <div class="space-8">
                <input class="form-control" type="text" name="string" placeholder="String">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="py-2">
            <input type="checkbox" aria-label="Checkbox for following text input" <%=query.integerCheck ? 'checked' : ''
                %>>
            <label class="col-sm-2 form-label">Integer</label>
            <div>
                <input class="form-control" type="number" name="integer" placeholder="Integer">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="py-2 align-items-center">
            <input type="checkbox" aria-label="Checkbox for following text input" <%=query.floatCheck ? 'checked' : ''
                %>>
            <label class="col-sm-2 form-label">Float</label>
            <div class="space-8">
                <input class="form-control" step="0.005" type="number" name="integer" placeholder="Float">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="py-2">
            <div>
                <input type="checkbox" aria-label="Checkbox for following text input" <%=query.dateCheck ? 'checked'
                    : '' %>>
                <label class="me-5">Date</label>
            </div>

            <div>
                <input class="form-control" type="date" name="startDate">
                <p>to</p>
                <input class="form-control" type="date" name="endDate">
            </div>
        </div>
    </div>
    <br>

    <div class="py-2">
        <input type="checkbox" aria-label="Checkbox for following text input" <%=query.booleanCheck ? 'checked' : '' %>>
        <label class="">Boolean</label>
        <div class="py-2">
            <select class="form-control">
                <option value="" selected disabled>-- Choose Boolean --</option>
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
    </div>
    <br>

    <div>
        <button id="search-button" class="btn btn-primary">Search</button>
        <a href="/users" type="reset" class="btn btn-danger" id="reset-button">Reset</a>
    </div>
    <br>
    <br>
</form>