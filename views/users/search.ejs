<h2>Filter</h2>

<form>
    <div>
        <div class="flex-container">
            <input type="checkbox" aria-label="Checkbox for following text input" />
            <label class="col-sm-2 col-form-label">
                ID
            </label>
            <div class="space-8">
                <input id="Id" class="input-search" type="text" name="id" placeholder="Id" />
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <input type="checkbox" aria-label="Checkbox for following text input" />
            <label class="col-sm-2 col-form-label">
                String
            </label>
            <div class="space-8">
                <input class="input-search" type="text" name="string" placeholder="String" />
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <input type="checkbox" aria-label="Checkbox for following text input" />
            <label class="col-sm-2 col-form-label">
                Integer
            </label>
            <div class="space-8">
                <input class="input-search" type="number" name="integer" placeholder="Integer" />
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <input type="checkbox" aria-label="Checkbox for following text input" />
            <label class="col-sm-2 col-form-label">
                Float
            </label>
            <div class="space-8">
                <input class="input-search" step="0.005" type="text" name="integer" placeholder="Float" />
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="d-flex align-items-center">
            <div>
                <input type="checkbox" aria-label="Checkbox for following text input" />
                <label class="me-5">
                    Date
                </label>
            </div>

            <div class="space-8">
                <input class="input-search date-input" type="date" name="startDate" placeholder="Date" /> <br>to<br>
                <input class="input-search date-input" type="date" name="endDate" placeholder="Date" />
            </div>
        </div>
    </div>
    <br>

    <div class="flex-container">
        <input type="checkbox" aria-label="Checkbox for following text input" />
        <label class="">
            Boolean
        </label>
        <div class="space-8">
            <select class="input-search">
                <option value="" selected disabled>-- Choose Boolean --</option>
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
    </div>
    <br>

    <div>
        <button id="search-button" class="btn btn-primary">Search</button>
        <a href="/users" type="reset" class="btn btn-danger" id="reset-button">Reset</a>
    </div>
    <br>
    <br>
</form>