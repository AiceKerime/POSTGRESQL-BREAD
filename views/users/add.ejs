<%- include('../partials/header') %>

    <h2>Add data</h2>

    <form id="str" action="" method="post">
        <div class="input-group">
            <label for="string" class="input-label">String</label>
            <input name="string" type="text" id="string" class="input" required>
        </div>

        <div class="input-group">
            <label for="number" class="input-label">Integer</label>
            <input name="integer" type="number" id="number" class="input" required>
        </div>

        <div class="input-group">
            <label for="float" class="input-label">Float</label>
            <input name="float" step="0.005" type="number" step="any" id="float" class="input" required>
        </div>

        <div class="input-group">
            <p>Date</p>
            <input name="date" type="date" id="date" class="input">
        </div>

        <div class="flex-container">
            <label class="">
                <input type="checkbox" aria-label="Checkbox for following text input" />Boolean
            </label>
            <div class="space-8">
                <select class="input-search">
                    <option value="" selected disabled>-- Choose Boolean --</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
        </div>

        <div>
            <form action="" method="post">
                <br>
                <button type="submit" class="btn btn-primary" id="SaveButton">Save</button>
            </form>
            <a href="/users" class="btn btn-danger" id="BackButton">Back</a>
        </div>
    </form>

    <%- include('../partials/footer') %>